{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["ES2020"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "rootDir": "src",
        "paths": {
            "@/*": ["src/*"]
        },
        "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
